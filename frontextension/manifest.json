{
  "name": "YouTube Downloader",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A simple Firefox extension.",
  "permissions": [
      "activeTab",
      "tabs",
      "storage"
    ],
  
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "./Frontend/dist/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://*/*"],
      "js": ["./Frontend/dist/bundle.js"]
    }
  ]
}
