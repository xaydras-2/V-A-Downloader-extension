{
  "name": "YouTube Downloader",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A simple Firefox extension.",
  "permissions": ["activeTab", "storage", "tabs"],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "./Frontend/dist/index.html"
  },
  "background": {
    "scripts": ["./Frontend/dist/bundle.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
